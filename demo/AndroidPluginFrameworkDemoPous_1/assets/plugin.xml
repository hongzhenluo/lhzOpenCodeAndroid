<?xml version="1.0" encoding="UTF-8"?>
<!-- 插件提供的功能(类) -->
<plugin-features>
	<!-- 描述类，这个是自定义的 -->
	<description name="org.igeek.android.pluginframework.demo.plus1.PlugDescription"/>
	
	<!-- 这是一个功能(类) -->
	<feature name="org.igeek.android.pluginframework.demo.plus1.PlugActivity">
	
		<!-- 这是一个方法 -->
		<!-- name 方法名 -->
		<method need-context="true" name="showDialog1" >发射对话框</method>
		<method need-context="true" name="showDialog2" >发射第二个对话框</method>
		
	</feature>
	
	<feature name="org.igeek.android.pluginframework.demo.plus1.OtherPlugActivity">
		<method need-context="true" name="toast" >吐司一次</method>
	</feature>
</plugin-features>